/* 分析记录页面样式 */
.history-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 记录卡片 */
.record-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.record-item:active {
  background-color: #f8f8f8;
}

/* 户型图 */
.record-image {
  flex-shrink: 0;
  margin-right: 24rpx;
}

/* 记录信息 */
.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  min-width: 0;
}

/* 户型信息 */
.house-info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.info-label {
  color: #666;
  margin-right: 8rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
}

.info-divider {
  margin: 0 16rpx;
  color: #ddd;
}

/* 分析摘要 */
.analysis-summary {
  flex: 1;
  min-height: 80rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 评分 */
.score-section {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.score-label {
  color: #666;
  margin-right: 8rpx;
}

.score-value {
  color: #ff6b00;
  font-weight: bold;
  font-size: 28rpx;
}

/* 时间 */
.time-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.time-text {
  color: #999;
}

/* 操作按钮 */
.record-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin-left: 20rpx;
}

.action-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.action-btn:active {
  background-color: #e5e5e5;
}

.delete-btn {
  background-color: #fee;
}

.delete-btn:active {
  background-color: #fdd;
}

