/* 我的页面样式 */
.profile-container {
  background-color: #f3f3f3;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-header {
  background: linear-gradient(135deg, #0052d9 0%, #266fe8 100%);
  padding: 48rpx 32rpx;
  color: #ffffff;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.user-avatar {
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
}

.username {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
}

.user-stats {
  display: flex;
  gap: 48rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 内容区域 */
.content-section,
.message-section,
.settings-section {
  margin: 24rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #e7e7e7;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  padding: 24rpx 32rpx 0 32rpx;
  margin-bottom: 16rpx;
}

.count-badge {
  font-size: 28rpx;
  color: #666666;
  margin-right: 16rpx;
}

/* 退出登录区域 */
.logout-section {
  margin: 48rpx 24rpx;
}

/* 未登录状态 */
.login-section {
  padding: 80rpx 32rpx;
  text-align: center;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.login-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #666666;
  margin: 24rpx 0 8rpx 0;
}

.login-desc {
  font-size: 28rpx;
  color: #999999;
}
