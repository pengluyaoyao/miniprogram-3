/* 首页样式 */
.home-container {
  background-color: #f3f3f3;
  min-height: 100vh;
}

/* 搜索栏 */
.search-section {
  background-color: #ffffff;
  padding: 24rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

/* Feed流内容 */
.feed-content {
  padding: 24rpx;
}

/* 户型卡片 */
.house-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-image-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.card-image {
  width: 100%;
  height: 100%;
}

.house-type-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

/* 卡片内容 */
.card-content {
  padding: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.card-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 互动数据 */
.card-interactions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.interaction-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666666;
}

.stat-text {
  font-size: 24rpx;
  color: #666666;
}

.publish-time {
  font-size: 24rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  padding: 40rpx 0;
}

.load-text {
  font-size: 28rpx;
  color: #666666;
}

/* 没有更多数据 */
.no-more {
  padding: 40rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-top: 24rpx;
}
