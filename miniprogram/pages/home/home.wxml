<!--首页 - Feed流展示-->
<view class="home-container">
  <!-- 搜索栏 -->
  <view class="search-section">
    <t-search
      placeholder="搜索户型、风水..."
      bind:change="onSearchChange"
      bind:submit="onSearchSubmit"
    />
  </view>

  <!-- Feed流内容 -->
  <view class="feed-content">
    <view 
      class="house-card" 
      wx:for="{{houseList}}" 
      wx:key="id"
      bind:tap="onCardTap"
      data-item="{{item}}"
    >
      <!-- 户型图 -->
      <view class="card-image-container">
        <t-image
          src="{{item.image}}"
          mode="aspectFill"
          class="card-image"
          loading="lazy"
        />
        <view class="house-type-tag">
          <t-tag theme="dark" size="small">{{item.type}}</t-tag>
        </view>
      </view>

      <!-- 卡片内容 -->
      <view class="card-content">
        <view class="card-title">{{item.title}}</view>
        <view class="card-description">{{item.description}}</view>
        
        <!-- 互动数据 -->
        <view class="card-interactions">
          <view class="interaction-stats">
            <view class="stat-item">
              <t-icon name="thumb-up" size="16rpx" />
              <text class="stat-text">{{item.likes}}</text>
            </view>
            <view class="stat-item">
              <t-icon name="chat" size="16rpx" />
              <text class="stat-text">{{item.comments}}</text>
            </view>
          </view>
          <view class="publish-time">{{item.time}}</view>
        </view>
      </view>
    </view>

    <!-- 加载更多 -->
    <view class="load-more" wx:if="{{loading}}">
      <t-loading size="40rpx" />
      <text class="load-text">加载中...</text>
    </view>

    <!-- 没有更多数据 -->
    <view class="no-more" wx:if="{{!hasMore && houseList.length > 0}}">
      <t-divider>没有更多了</t-divider>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{houseList.length === 0 && !loading}}">
      <t-icon name="image" size="120rpx" color="#ccc" />
      <text class="empty-text">暂无户型分析</text>
    </view>
  </view>
</view>

<!-- Toast提示 -->
<t-toast id="t-toast" />
