/* 登录页面样式 */
.login-container {
  background-color: #f3f3f3;
  min-height: 100vh;
  padding: 48rpx 48rpx 80rpx 48rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin: 80rpx 0 120rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #0052d9 0%, #266fe8 100%);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto 32rpx auto;
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666666;
}

/* 登录选项 */
.login-options {
  margin-bottom: 48rpx;
}

/* 手机号登录表单 */
.phone-login-form {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  border: 1rpx solid #e7e7e7;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #000000;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.phone-input-wrapper,
.code-input-wrapper {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.phone-input,
.code-input {
  flex: 1;
}

.get-phone-btn,
.send-code-btn {
  flex-shrink: 0;
  min-width: 160rpx;
}

/* 登录协议 */
.agreement-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.link-text {
  color: #0052d9;
}

/* 功能介绍 */
.features-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  border: 1rpx solid #e7e7e7;
}

.features-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 32rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.feature-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: #f3f3f3;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}
