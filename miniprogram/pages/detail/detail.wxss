/* 户型详情页面样式 */
.detail-container {
  background-color: #f3f3f3;
  min-height: 100vh;
}

/* 户型图展示 */
.image-section {
  position: relative;
  width: 100%;
  height: 500rpx;
}

.main-image {
  width: 100%;
  height: 100%;
}

.house-type-tag {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.image-actions {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 信息区域 */
.info-section {
  background-color: #ffffff;
  padding: 32rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.meta-info {
  display: flex;
  gap: 32rpx;
  font-size: 28rpx;
  color: #666666;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 互动区域 */
.interaction-section {
  background-color: #ffffff;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.interaction-stats {
  display: flex;
  gap: 48rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #666666;
}

.stat-text {
  font-size: 28rpx;
  color: #666666;
}

/* 分析报告区域 */
.analysis-section {
  background-color: #ffffff;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e7e7e7;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 24rpx;
}

.analysis-results {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  padding: 24rpx;
  border-radius: 8rpx;
  border-left: 8rpx solid;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.result-content {
  font-size: 26rpx;
  line-height: 1.5;
}

/* 评论区域 */
.comments-section {
  background-color: #ffffff;
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e7e7e7;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.view-all {
  font-size: 28rpx;
  color: #0052d9;
}

/* 评论列表 */
.comments-list {
  margin-bottom: 32rpx;
}

.comment-item {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-avatar {
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.comment-author {
  font-size: 28rpx;
  font-weight: 500;
  color: #000000;
}

.comment-time {
  font-size: 24rpx;
  color: #999999;
}

.comment-text {
  font-size: 28rpx;
  color: #000000;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.comment-actions {
  display: flex;
  gap: 32rpx;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666666;
}

/* 评论输入 */
.comment-input-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e7e7e7;
}

.input-avatar {
  flex-shrink: 0;
}

.comment-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f3f3f3;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
}

.comment-input {
  flex: 1;
}

.submit-btn {
  margin-left: 16rpx;
}
